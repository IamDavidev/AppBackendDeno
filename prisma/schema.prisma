generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["deno"]
  output          = "../generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  uuid                 String   @unique
  name                 String
  email                String   @unique
  password             String
  tagName              String   @unique
  bio                  String?
  profileImage         String?
  numberOfPublications Int      @default(0)
  publications         String[] @default([])
}

enum ObjectFit {
  cover
  contain
  fill
  none
}

type Image {
  url       String
  alt       String
  height    Int
  width     Int
  objectFit ObjectFit
}

model Publication {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  uuid         String   @unique
  title        String
  body         String
  image        Image
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  likes        Int      @default(0)
  likesByUsers String[] @default([])
  userId       String
}
